<p id="notice"><%= notice %></p>
<div class="post">
  <div class="block bg-primary bg-opacity-75 text-center col-6">
    <div class="">
        <h1><%= @post.title %></h1>
    </div>
    <br><br>
    <div class="">
        <%= simple_format(@post.content, {}, wrapper_tag: 'h4') %>
    </div>
    <br><br>
    <div class="">
        <%= image_tag(@post.image, style: "max-height: 300px; max-width: 300px") if @post.image %>
    </div>
    <br><br>
  </div>
</div>
<p>Updated: <%= distance_of_time_in_words(@post.updated_at, Time.now) %> ago</p>
<br><br>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>

<%= link_to 'AUTHOR', @post.author %>
<hr>
<h3>Comments</h3>
<div class="">
  <% @post.comments.each do |comment| %>
    <% if comment.save %>
      <div class="comment_block">
        <div class="d-flex">
          <div class="author_name col-2">
            <%= simple_format(comment.author.first_name) %>
          </div>
          <div class="comment_body col-9">
            <%= simple_format(comment.body) %>
          </div>
        </div>
        <div class="">
          Updated: <%= distance_of_time_in_words(comment.updated_at, Time.now) %> ago <br>
        </div>
        <%= link_to 'Destroy', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  <% end %>
</div>
<hr>
<h3>Add Comment</h3>
<%= render 'comments/form', comment: @comment %>

<%= params %>
