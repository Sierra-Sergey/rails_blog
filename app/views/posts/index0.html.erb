<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="posts">
  <% @posts.each do |post| %>
    <div class="post_title">
      <%= post.title %>
    </div>
    <div class="post_content">
      <%= post.content %>
      <%= post.image %>
    </div>

    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>

<br>

<%= link_to 'New Post', new_post_path %>
