<% if params[:status] == {"status"=>"0"}  %>
<h4>Unpublished comments</h4>
  <% @post.comments.unpublished.each do |comment| %>
    <% if comment.save %>
      <div class="comment_block">
        <div class="d-flex">
          <div class="author_name col-2">
            <%= "#{comment.author.first_name}:" %>
          </div>
          <div class="comment_body col-9">
            <%= simple_format(comment.body) %>
          </div>
          <div class="col-1">
            <%= link_to "Publish", post_comment_path(comment.post, comment), method: :patch %>
          </div>
        </div>
        <div class="">
          Updated: <%= distance_of_time_in_words(comment.updated_at, Time.now) %> ago <br>
        </div>
        <%= link_to 'Destroy', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  <% end %>
<% else %>
<h4>Published comments</h4>
  <% @post.comments.published.each do |comment| %>
    <% if comment.save %>
      <div class="comment_block">
        <div class="d-flex">
          <div class="author_name col-2">
            <%= "#{comment.author.first_name}:" %>
          </div>
          <div class="comment_body col-9">
            <%= simple_format(comment.body) %>
          </div>
        </div>
        <div class="">
          Updated: <%= distance_of_time_in_words(comment.updated_at, Time.now) %> ago <br>
        </div>
        <%= link_to 'Destroy', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  <% end %>
<% end %>
